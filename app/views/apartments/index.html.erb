<% @apartments.each do |apartment| %>

<h1>Apartments</h1>

<p>
  <strong>Street 1:</strong>
  <%= apartment.street_1 %>
</p>

<p>
  <strong>Street 2:</strong>
  <%= apartment.street_2 %>
</p>

<p>
  <strong>City:</strong>
  <%= apartment.city %>
</p>

<p>
  <strong>Postal code:</strong>
  <%= apartment.postal_code %>
</p>

<p>
  <strong>State:</strong>
  <%= apartment.state %>
</p>

<p>
  <strong>Country:</strong>
  <%= apartment.country %>
</p>

<p>
  <strong>Name:</strong>
  <%= apartment.name %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= apartment.phone_number %>
</p>

<p>
  <strong>Hours to contact:</strong>
  <%= apartment.hours_to_contact %>
</p>

<%= link_to 'Show', apartment %>
<%= link_to 'Edit', edit_apartment_path(apartment) %>
<%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>


